{% extends 'base.html.twig' %}

{% block title %}Reservation{% endblock %}

{% block body %}
<br>
<br>
    <div style="background-color: #f8c471; padding: 20px; border-radius: 5px;">
                <a href="{{ path('app_reservation_index') }}" style="display: inline-block; background-color: #f39c12; color: white; text-decoration: none; padding: 10px 20px; border-radius: 4px; margin-top: 20px; text-align: center; transition: background-color 0.3s;">Back to List</a>

        <h1 style="margin-bottom: 20px;">Reservation</h1>

        <table style="width: 100%; border-collapse: collapse; border: 1px solid #ddd; background-color: #fff;">
            <tbody>
                <tr>
                    <th style="padding: 10px; text-align: left; background-color: #f39c12; color: white;">IdC</th>
                    <td style="padding: 10px;">{{ reservation.idC }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; background-color: #f39c12; color: white;">Zone</th>
                    <td style="padding: 10px;">{{ reservation.zone }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; background-color: #f39c12; color: white;">Dater</th>
                    <td style="padding: 10px;">{{ reservation.dater ? reservation.dater|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; background-color: #f39c12; color: white;">TableId</th>
                    <td style="padding: 10px;">{{ reservation.tableId }}</td>
                </tr>
                <tr>
                    <th style="padding: 10px; text-align: left; background-color: #f39c12; color: white;">Status</th>
                    <td style="padding: 10px;">{{ reservation.status }}</td>
                </tr>
            </tbody>
        </table>

    </div>
<br>
<br>
{% endblock %}
